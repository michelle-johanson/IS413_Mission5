<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Michelle Johanson</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/favicon.png" />
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<!-- Header -->
<header class="site-header">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <div>
                <a class="nav-link d-inline-block" href="/">My Drawing</a>
                <a class="nav-link d-inline-block" href="/Home/Calculator">Calculator</a>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content -->
<main class="main-content">
    <div class="container">
        @RenderBody()
    </div>
</main>

<!-- Footer -->
<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-left">
                <p class="mb-0">&copy; @DateTime.Now.Year Art & Drawing. All rights reserved.</p>
                <p class="mb-0">Built with ❤️ by Michelle Johanson</p>
            </div>
            <div class="footer-right">
                <p class="mb-0">IS 413 - Mission 5</p>
                <p class="mb-0">Brigham Young University</p>
            </div>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/jquery-4.0.0.min.js"></script>
<script src="~/lib/jquery/jquery-migrate-v3.6.0.js"></script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
</body>
</html>